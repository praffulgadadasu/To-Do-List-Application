generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userstable{
  id String @id @default(uuid())
  username String
  email String @unique
  password String
  role String
  todolists ToDoList[]
}

model ToDoList{
  id Int @id @default(autoincrement())
  title String
  description String
  user userstable @relation(fields:[userId],references:[id])
  userId String
}
